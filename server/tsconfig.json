{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "target": "ES2020",                   // ✅ Output modern JS
    "module": "ESNext",                    // ✅ Modern ES Modules (import/export)
    "moduleResolution": "node",            // ✅ Allow node_modules resolution
    "rootDir": "src",                      // ✅ Source TypeScript files
    "outDir": "dist",                      // ✅ Output compiled JS files
    "allowSyntheticDefaultImports": true,  // ✅ Allow default imports (like "import express from 'express'")
    "esModuleInterop": true,                // ✅ Compatibility for CommonJS + ES Modules
    "resolveJsonModule": true,              // ✅ Allow importing JSON files
    "forceConsistentCasingInFileNames": true, // ✅ Safer imports on all OS
    "strict": true,                         // ✅ Strict type checking
    "skipLibCheck": true                    // ✅ Ignore type checking for node_modules
  },
  "include": ["src"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
